<!DOCTYPE html>
<html lang="en">

<!-- Start of HEAD  ---------------------------------------------------- -->
<head>
<!--
    <meta charset="UTF-8">
    <title>Fantasy About</title>
-->

  <!--  Include the Common Head file from the Partials Folder ---------  -->
  <% include ../partials/head %>
  <!--  Figure out how to move the css stuff into this file
     include ../public/css/svfl.css
  -->

</head>
<!-- End of HEAD  ---------------------------------------------------- -->

<!-- Start of Body  ---------------------------------------------------- -->
<body>
  <header>
    <!-- Include the Navagation bar on the page  ------------------------- -->
    <% include ../partials/header %>
  </header>

  <!--   Roster Table List  -----------------------------------------  -->
  <div class="container-fluid">
      <div class="row">
          <div class="col-sm-4 col-sm-offset-1">
              <h2>Roster</h2>

              <div class="text-right">

                  <form method="post" action="/lineup">
                      <input type="hidden" name="ownerid" value="<%= owner.rows[0].owner_id%>">
                      <input type="submit" name="lineup" class="btn btn-warning" value="Partial">
                      <input type="submit" name="lineup" class="btn btn-success" value="Final">
                </div>

                  <div class="scrollable-long">
                      <table id="tbRoster" class="table table-striped table-bordered table-condensed">
                          <thead>
                              <tr>
                                  <th>Player</th>
                                  <th>Team</th>
                                  <th>Position</th>
                                  <th>Category</th>
                                  <th>Player Status</th>
                                  <th>Start</th>
                              </tr>
                          </thead>
                          <tbody>
                              <%
                              console.log("*** draft.ejs - OWNER ROSTER length: " + roster.rows.length);
                              for (var i=0; i < roster.rows.length; i++) {
                                  %>
                                  <tr>
                                      <td>
                                          <%= roster.rows[i].full_name%>
                                      </td>
                                      <td>
                                          <%= roster.rows[i].team%>
                                      </td>
                                      <td>
                                          <%= roster.rows[i].position%>
                                      </td>
                                      <td>
                                          <%= roster.rows[i].category%>
                                      </td>
                                      <td>
                                          <%= roster.rows[i].status%>
                                      </td>
                                      <td>
                                          <% switch (roster.rows[i].category){
                                              case 'QB': %>
                                              <input type="radio" name="QB" value="<%= roster.rows[i].player_id %>"></input>
                                              <% break;
                                              case 'RB':%>
                                              <input type="checkbox" name="RB" value="<%= roster.rows[i].player_id %>"></input>
                                              <% break;
                                              case 'RC':%>
                                              <input type="checkbox" name="RC" value="<%= roster.rows[i].player_id %>"></input>
                                              <% break;
                                              case 'K':%>
                                              <input type="radio" name="K" value="<%= roster.rows[i].player_id %>"></input>
                                              <% break;
                                              case 'DEF':%>
                                              <input type="radio" name="DEF" value="<%= roster.rows[i].player_id %>"></input>
                                              <%
                                          } %>
                                      </td>
                                  </tr>
                                  <%
                              }   //close the for loop
                              %>
                          </tbody>
                      </table>
                  </form>
              </div>

          </div>  <!-- END div class="col-md-4"   -->
          <!--   END Roster Table List  -----------------------------------------  -->
      </div>  <!-- END div class="row"    -->
  </div>  <!-- END div class="container" -->

  <!--  Include the Common Footer from the Partials Folder ---------  -->
  <footer>
    <% include ../partials/footer %>
  </footer>

</body>
<!-- End of Body  ---------------------------------------------------- -->

</html>
