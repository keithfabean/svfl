<table border=2>
	<thead>
	<tr>
		<th>Player</th>
		<th>Team</th>
		<th>Position</th>
		<th>Add</th>
	</tr>
	</thead>
	<tbody>

	<%
	console.log("*** draft.ejs - PLAYER length: " + players.length);
	for (var i=0; i < players.length; i++) {
    %>

	<tr>
		<td>
			<%= players[i].get('fullName')%>
		</td>
		<td>
			<%= players[i].get('teamName')%>
		</td>
		<td>
			<%= players[i].get('abvPosition')%>
		</td>
		<td>
			<input type="radio" name="addplayerId" value="<%= players[i].id%>">
		</td>
	</tr>
	<%
	}   //close the for loop
	%>
