<body>

<!-- Wrap the entire set of tables in a form  -------------------------- -->
<form method="post" action="/draft">
<input type="submit">

<!-- -------Start of the Table for the Owner Roster & Player List --------------- -->
<table border=2 cellpadding"100" cellspacing"500">
<tr>
    <!-- -------- Start of the Table Cell for Owners List --------------------- -->
    <td valign="top">
        <div id="owner" class="owner">
            <table border=2 sortable>
            <thead>
                <tr>
                    <th>Owner</th>
                    <th>Select</th>
                </tr>
            </thead>
            <tbody>
<!--                <form	-->
                  <%
                console.log("*** draft.ejs - OWNER length: " + owners.length);
                for (var i=0; i < owners.length; i++) { %>
                    <tr>
                        <td>
                            <%= owners[i].get('firstName') + " " + owners[i].get('lastName')%>
                        </td>
                        <td>
                            <input type="radio" name="ownerId" value="<%= owners[i].id%>">
                        </td>
                    </tr>
                <%
                }   // Close the for loop
                %>
<!--                </form>	-->
            </tbody>
            </table>

        </div>
    </td>
    <!-- -------End of the Table Cell for the Owner List --------------- -->

    <!-- -------- Start of the Table Cell for Owners Roster List of Players -------------- -->
    <td valign="top">
        <div id="roster" class="ownerroster">
            <table border=2 sortable>
            <thead>
                <tr>
                    <th align="center" span="4">
                    <%= roster[0].get('SVFLOwnerId').get('firstName') + " " + roster[0].get('SVFLOwnerId').get('lastName')%>
                    </th>

                </tr>
                <tr>
                    <th>Player</th>
                    <th>Team</th>
                    <th>Position</th>
                    <th>Drop</th>
                </tr>
            </thead>
            <tbody>
<!--                <form	-->
                  <%
                console.log("*** draft.ejs - ROSTER length: " + roster.length);
                for (var i=0; i < roster.length; i++) { %>
                    <tr>
                        <td>
							<%= roster[i].get('NFLPlayerId').get('fullName')%>
                        </td>
                        <td>
							<%= roster[i].get('NFLPlayerId').get('abvTeam')%>
                        </td>
                        <td>
							<%= roster[i].get('NFLPlayerId').get('abvPosition')%>
                        </td>
                        <td>
							<input type="radio" name="dropplayerId" value="<%= roster[i].get('NFLPlayerId').id%>">
                        </td>
                    </tr>
                <%
                }   // Close the for loop
                %>
<!--                </form>		-->
            </tbody>
            </table>

        </div>

    </td>
    <!-- -------End of the Table Cell for the Owner Roster --------------- -->

<!-- -------Start of the Table Cell for the Player List --------------- -->
<td>

<!-- ---------- Start of the List of Players to be added to an Owner Roster ---------- -->

<div id="playerlist" "class="playerlist">

